<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luvkush.meiten.StudentLanding"
    android:background="@drawable/universityimage"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="30dp"
            >

            <Button
                android:id="@+id/FAQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:background="@drawable/rounded_btn"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/SamplePapers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Papers"
                android:background="@drawable/rounded_btn"
                android:textColor="#FFFFFF"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/ViewJobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Jobs"
                android:background="@drawable/rounded_btn"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/AboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:background="@drawable/rounded_btn"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/ContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us"
                android:padding="5dp"
                android:background="@drawable/rounded_btn"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:background="@drawable/rounded_btn"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="389dp"
        android:layout_height="53dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993"
        android:layout_marginStart="8dp">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:backgroundTint="#C1CFE8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav"/>

    </android.support.design.widget.CoordinatorLayout>


</android.support.constraint.ConstraintLayout>
